@using MudBlazor

<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
    
    <AuthorizeView>
        <Authorized>
            <MudNavGroup Title="Company" Icon="@Icons.Material.Filled.Business" Expanded="false">
                <MudNavLink Href="/profile" Icon="@Icons.Material.Filled.AccountBox">Company Profile</MudNavLink>
                <MudNavLink Href="/certifications" Icon="@Icons.Material.Filled.VerifiedUser">Certifications</MudNavLink>
                <MudNavLink Href="/contacts" Icon="@Icons.Material.Filled.ContactPhone">Contacts</MudNavLink>
                <MudNavLink Href="/documents" Icon="@Icons.Material.Filled.Description">Documents</MudNavLink>
            </MudNavGroup>
            
            <MudNavGroup Title="Products" Icon="@Icons.Material.Filled.Inventory" Expanded="false">
                <MudNavLink Href="/products" Icon="@Icons.Material.Filled.List">Product Catalog</MudNavLink>
                <MudNavLink Href="/products/add" Icon="@Icons.Material.Filled.Add">Add Product</MudNavLink>
                <MudNavLink Href="/products/import" Icon="@Icons.Material.Filled.Upload">Import Products</MudNavLink>
                <MudNavLink Href="/products/categories" Icon="@Icons.Material.Filled.Category">Categories</MudNavLink>
            </MudNavGroup>
            
            <MudNavGroup Title="Business" Icon="@Icons.Material.Filled.BusinessCenter" Expanded="false">
                <MudNavLink Href="/rfqs" Icon="@Icons.Material.Filled.RequestQuote">RFQ Requests</MudNavLink>
                <MudNavLink Href="/quotes" Icon="@Icons.Material.Filled.Receipt">My Quotes</MudNavLink>
                <MudNavLink Href="/orders" Icon="@Icons.Material.Filled.ShoppingCart">Orders</MudNavLink>
                <MudNavLink Href="/buyers" Icon="@Icons.Material.Filled.People">Buyers</MudNavLink>
            </MudNavGroup>
            
            <MudNavGroup Title="Analytics" Icon="@Icons.Material.Filled.Analytics" Expanded="false">
                <MudNavLink Href="/analytics/sales" Icon="@Icons.Material.Filled.TrendingUp">Sales Report</MudNavLink>
                <MudNavLink Href="/analytics/products" Icon="@Icons.Material.Filled.BarChart">Product Performance</MudNavLink>
                <MudNavLink Href="/analytics/buyers" Icon="@Icons.Material.Filled.PieChart">Buyer Analysis</MudNavLink>
            </MudNavGroup>
            
            <MudNavLink Href="/messages" Icon="@Icons.Material.Filled.Message">Messages</MudNavLink>
            <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings">Settings</MudNavLink>
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="/login" Icon="@Icons.Material.Filled.Login">Login</MudNavLink>
            <MudNavLink Href="/register" Icon="@Icons.Material.Filled.PersonAdd">Register</MudNavLink>
            <MudNavLink Href="/about" Icon="@Icons.Material.Filled.Info">About</MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>